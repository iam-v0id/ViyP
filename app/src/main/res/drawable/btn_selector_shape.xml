<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="oval">
            <gradient android:angle="135" android:endColor="@color/colorAccent" android:startColor="@color/jd_light" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="@android:color/black" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/jd_light" android:startColor="@color/colorAccent" />
            <corners android:radius="@dimen/btn_corner_radius" />
            <!--            <stroke android:width="4dp" android:color="@android:color/black" />-->
        </shape>

    </item>
</selector>
